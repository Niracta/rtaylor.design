---
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";

export interface Props {
  projects: CollectionEntry<`projects`>[];
}

const { projects } = Astro.props;
---

<ul class="grid">
  {
    projects.map((project) => (
      <li class="project">
        <a
          href={`/projects/${project.slug}`}
          aria-label={`Navigate to Project ${project.data.title}`}
        >
          <Image
            src={
              import(
                `/src/content/projects/${project.slug}/${project.data.banner}`
              )
            }
            height={400}
            alt={project.data.title}
          />
          <div>
            <h3>{project.data.title}</h3>
            <span>{project.data.client}</span>
          </div>
        </a>
      </li>
    ))
  }
</ul>

<style is:global>
  .grid {
    display: grid;
    grid-auto-rows: min-content;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    justify-content: center;
    gap: 20px;
    width: stretch;
    max-width: 1280px;
    height: stretch;
    margin: unset;
    margin-inline: auto;
    padding-inline: 24px;
  }

  .project {
    position: relative;
    width: 100%;
    min-width: 300px;
    border-radius: 4px;

    &:focus-within {
      outline: 2px solid var(--colors-secondary-light);
      outline-offset: 2px;
    }

    img,
    div {
      border-radius: 4px;
    }

    a {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      border: none;
      aspect-ratio: 5 / 4;

      img {
        position: absolute;
        height: 100%;
        object-fit: cover;
      }

      &:focus-visible {
        outline: none;
      }
    }

    div {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 12px;
      width: 100%;
      height: 100%;
      background-color: color-mix(
        in oklch,
        var(--colors-secondary-light),
        transparent 40%
      );
      backdrop-filter: blur(4px);
      opacity: 0;
      transition: opacity 0.5s;
    }

    h3,
    span {
      width: 100%;
      padding: 0 8px;
      text-align: center;
      color: var(--colors-white);
      text-shadow: 0px 2px 2px
        color-mix(in oklch, var(--colors-black), transparent 50%);
      box-sizing: border-box;
    }

    h3 {
      font-weight: 600;
      font-size: 20px;
      line-height: 24px;
    }

    span {
      font-weight: 400;
      font-size: 18px;
      line-height: 22px;
    }

    &:hover,
    &:focus-visible {
      div {
        opacity: 1;
      }
    }
  }
</style>
